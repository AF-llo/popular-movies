<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/turquoise</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="text_description">
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>
    
    <style name="text_title">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="text_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:background">@color/turquoise</item>
    </style>

</resources>