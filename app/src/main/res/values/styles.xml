<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/turquoise</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="text_dexscription">
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>

    <style name="text_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:background">@color/turquoise</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/button_turquoise</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/button_width</item>
    </style>


</resources>